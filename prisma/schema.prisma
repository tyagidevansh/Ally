generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id          String     @id @default(uuid())
  userId      String     @unique
  name        String
  imageUrl    String
  email       String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  streakStart DateTime?  @db.Timestamp(6)
  streakLast  DateTime?  @db.Timestamp(6)
  bestStreak  Int?       @default(0) @db.SmallInt
  dailyGoal   Int        @default(180) @db.SmallInt
  TimerLog    TimerLog[]
  ToDo        ToDo[]
}

model TimerLog {
  id        String   @id @default(uuid())
  profileId String
  startTime DateTime
  endTime   DateTime
  duration  Int
  activity  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  profile   Profile  @relation(fields: [profileId], references: [id])
}

model ToDo {
  id          BigInt   @id @default(autoincrement())
  created_at  DateTime @default(now()) @db.Timestamptz(6)
  profileId   String
  task        String
  priority    Int      @db.SmallInt
  isCompleted Boolean
  Profile     Profile  @relation(fields: [profileId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}